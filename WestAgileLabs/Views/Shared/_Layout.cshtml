<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WestAgileLabs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrapWAL.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WestAgileLabs.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        .text-container1 {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .text-container1 h1{
            margin: 0;
            color: rgba(225,225,225, .01);
            background-image: url("https://media.istockphoto.com/id/1324581873/vector/abstract-halftone-texture-vector-dots-background-green-particles-of-different-sizes.jpg?s=612x612&w=0&k=20&c=xxKoMOtTLKRIXA4sgMA2zBXtw2dzHbJxB-YS24_UyF0=");
            /*https://wallpapercave.com/wp/wp2975094.png*/
            background-repeat: repeat;
            -webkit-background-clip:text;
            animation: animate 15s ease-in-out infinite;
            text-align:justify;
            text-transform: uppercase;
            font-weight:900;
        }

        @@keyframes animate {
            0%, 100% {
                background-position: left top;
            }
            25%{
                background-position: right bottom;
                }
            50% {
                background-position: left bottom;
            }
            75% {
                background-position: right top;
            }   
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 text-container1" style="padding:unset">            
            <div class="container-fluid" style="float:right">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Home" style="float:right">WestAgileLabs</a>*@
                @{
                    if (SecondaryLoginUser.Loginuser.Email != null)
                    {
                        <a href="@Url.Action("Home", SecondaryLoginUser.Loginuser.Role.ToString(), new {Id = SecondaryLoginUser.Loginuser.Id, Email = SecondaryLoginUser.Loginuser.Email, Role = SecondaryLoginUser.Loginuser.Role})">
                            <img src="https://www.westagilelabs.com/wp-content/uploads/2023/04/WAL_logo1.svg" />
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Home">
                            <img src="https://www.westagilelabs.com/wp-content/uploads/2023/04/WAL_logo1.svg" />
                        </a>
                    }
                }
                <div class="text-container">
                    <h1>West Agile Labs</h1>
                </div>
                <a style="float:right">
                    <form method="get" style="float: right">
                        @{
                            if (SecondaryLoginUser.Loginuser.Email != null)
                            {
                                <input type="submit" asp-controller="Home" asp-action="Home" class="nav-link text-dark" value="Logout" style="background-color:transparent; border:unset" />
                            }
                            else
                            {
                                <input type="submit" asp-controller="Home" asp-action="Login" class="nav-link text-dark" value="Login" style="background-color:transparent; border:unset" />
                            }
                        }
                    </form>
                </a>
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="float:right">
                            <form method="get">
                                @{
                                    if (SecondaryLoginUser.Loginuser.Email != null)
                                    {
                                        <input type="submit" asp-controller="Home" asp-action="Home" class="nav-link text-dark" value="Logout" style="background-color:transparent; border:unset" />
                                    }
                                    else
                                    {
                                        <input type="submit" asp-controller="Home" asp-action="Login" class="nav-link text-dark" value="Login" style="background-color:transparent; border:unset" />
                                    }
                                }
                            </form>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                   @* </ul>
                </div>*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WestAgileLabs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
